{
    "require": {
        "php": ">=5.3.0",
        "silex/silex": "~1.0@dev",
        "chh/cache-service-provider": "~1.0",
        "ext-curl": "*",
        "ext-gd": "*",
        "monolog/monolog": "^1.23",
        "cloudinary/cloudinary_php": "^1.8",
        "predis/predis": "1.0.3",
        "twbs/bootstrap": "^3.3",
        "phpunit/phpunit": "^6.3",
        "phpunit/php-invoker": "^1.1"
    },
    "extra": {
        "heroku": {
            "document-root": "web",
            "index-document": "index.php",
            "php-config": [
                "short_open_tag=on",
                "date.timezone=Asia/Taipei",
                "newrelic.appname=javaclass"
